<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="297.0" prefWidth="334.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.unlv.mis768.labwork16.SideMenuController">
   <children>
      <VBox prefHeight="297.0" prefWidth="334.0" spacing="10.0">
         <children>
            <ScrollPane prefHeight="119.0" prefViewportHeight="159.0" prefViewportWidth="334.0" prefWidth="294.0">
               <content>
                  <TextArea fx:id="selectionTextArea" prefHeight="94.0" prefWidth="279.0" />
               </content>
            </ScrollPane>
            <Label text="Please select the sides:">
               <font>
                  <Font size="12.0" />
               </font></Label>
            <CheckBox fx:id="friedZucchiniCheckBox" onAction="#checkBoxListener" text="Fried _Zucchini" />
            <CheckBox fx:id="friesCheckBox" onAction="#checkBoxListener" text="_Fries" />
            <CheckBox fx:id="saladCheckBox" onAction="#checkBoxListener" text="_Salad" />
            <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="294.0" spacing="20.0">
               <children>
                  <Label fx:id="totalLabel" />
                  <Button fx:id="startOverButton" onAction="#startOverButtonListener" text="Start Over" />
                  <Button fx:id="calculateButton" onAction="#calculateButtonListener" text="Calcualte Total" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
